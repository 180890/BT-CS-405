#include<iostream>
using namespace std;
class Name{
	char first[30];
	char middle[30];
	char last[30];
	public:
		Name(char X[],char Y[],char Z[])
		 {  int i=0;   
		    while(X[i]!='\0')
			{ 
			this->first[i]=X[i];
			i++;
			}
			this->first[i]='\0';
			int j=0;
		    while(Y[j]!='\0')
			{ 
			this->middle[j]=Y[j];
			j++;
			}
			this->middle[j]='\0';
			int k=0;
			 while(Z[k]!='\0')
			{ 
			this->last[k]=Z[k]; 
			k++;
			}
			this->last[k]='\0';
			
		}
		Name(Name &obj)
		{  int i=0;
		 while(obj.first[i]!='\0')
			{ 
			this->first[i]= obj.first[i];
			i++;
		} 
		this->first[i]='\0';
		int j=0;
			while(obj.middle[j]!='\0')
			{ 
			this->middle[j] =obj.middle[j];
			j++;
		}
		this->middle[j]='\0';
		int k=0;
			while(obj.last[k]!='\0')
			{ 
			this->last[k]=obj.last[k];
			k++;
		}
		this->last[k]='\0';
		}
		void display1(){
			cout<<"name is:"<<" "<<first;
			cout<<" "<<middle<<" "<<last;
		}
};
class Construct 
{
	int a,b;
	public:
		Construct ()
		{
			this->a=-1;
			this->b=-1;
		}
		Construct(int x)
		{
			this->a=x;
			this->b=-1;
		}
		Construct(int x,int y)
		{
			this->a=x;
			this->b=y;
		}
		void display()
		{
			cout<<"value of a="<<a<<endl;
			cout<<"value of b="<<b<<endl;
		}
};
int main()
{   Construct obj1 ;
	cout<<"when default constructor used:"<<endl;
	obj1.display();
	int n,m;
	cout<<"enter a number for a:";
	cin>>n;
    Construct obj2 (n);
	cout<<"when constructor with one parameter is used:"<<endl;
	obj2.display();
	cout<<"enter a number for b:";
	cin>>m;
	Construct obj3 (n,m);
	cout<<"when constructor with two parameter is used:"<<endl;
	obj3.display();
	char x[30],y[30],z[30];
	cout<< "enter first name:";
	cin>>x;
	cout<<"enter middle name:";
	cin>>y;
	cout<<"enter last name :";
	cin>>z;
	Name obj(x,y,z);
	Name ob2(obj);
	ob2.display1();
	return 0;
}
