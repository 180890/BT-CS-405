/* program to find greatest of three number.*/
#include<iostream>
using namespace std;
class Greater{
	int a,b,c;
	public:
		Greater(int x,int y,int z){
			this->a=x;
			this->b=y;
			this->c=z;
		}
		int compare (){
			if(this->a>this->b && this->a>this->c)
			  return a;
			  
			  else if(this->b>this->c)
			  return b;
			  
			  else return c;
			 
		}
		void display()
		{ int x= compare();
		   cout<< "result is:"<<x;
		}
};
int main()
{
	int x,y,z;
	cout<<"enter numbers:";
	cin>>x>>y>>z;
	Greater A(x,y,z);
	A.display();
}
